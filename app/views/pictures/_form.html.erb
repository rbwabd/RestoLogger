<%= form_for @picture, :html => {:multipart => true} do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <p>
    <%= f.label :genre %><br />
    <%= f.text_field :genre %>
  </p>
  <p>
    <!--<%= file_field "upload", "datafile"  %>-->
    <%= f.file_field :image %> 
  </p>
  <p>
		<%= f.label :remote_image_url, "or image URL" %>
    <%= f.text_field :remote_image_url %>
  </p>
	<p>
    <%= f.submit %>
  </p>
<% end %>

