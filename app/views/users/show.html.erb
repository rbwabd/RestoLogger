<% content_for :sidebar do %>
  <%= render 'shared/main_sidebar' %>
<% end %>

<table class="" summary="Profile information">
  <tr>
    <td class="">
      <h1>
        <% if @user.profilepicurl.nil? %>
          <%= gravatar_for @user %>
        <% else %>
          <%= image_tag(@user.profilepicurl, :size => "60x60", :alt => "", :class => "round")%> 
        <% end %>
        <%= @user.name %>
      </h1>
      <%= render 'follow_form' if signed_in? %>
      <% if @user.visits.any? %>
        <table class="visits" summary="User visits">
          <%= render @visits %>
        </table>
        <%= will_paginate @visits %>
      <% end %>
    </td>
    <td class="round">
      <strong>Name</strong> <%= @user.name %><br />
      <strong>URL</strong>  <%= link_to user_path(@user), @user %><br />
      <strong>Visits</strong> <%= @user.visits.count %>
      <%= render 'shared/stats' %>
    </td>
  </tr>
</table>

