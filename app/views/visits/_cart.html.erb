<div id="cart">
  <% if session[:cart].cart_items.size == 0 then  %>
    <div class="cart-message">No dishes in Order</div>
  <% else %>
    <table>
      <tr>
        <th width="200" >Dish</th>
        <th>Quantity</th>
      </tr>          
      <%= render({ :partial => "cart_item", :collection => session[:cart].cart_items }) %>
    </table>
    <div class="action">
      <%= link_to "Empty cart", change_cart_path(:delall => "y"), :confirm => "Are you sure?", :remote => true %>
    </div>  
  <% end %>
</div>
