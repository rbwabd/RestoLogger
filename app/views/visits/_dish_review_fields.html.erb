<div class="field"> 
  <%= f.label :rating, "Rating:" %>&nbsp;
  <%= f.text_field :rating, :size =>4 %>
</div>
<div class="field"> 
  <%= f.label :dish_id, "Dish ID:" %>&nbsp;
  <%= f.text_field :dish_id, :size =>4, :value=>"_dummy1_" %>
</div>
<div class="field"> 
  <%= f.fields_for :dish do |builder| %>
    <%= builder.label :name, "Dish name:" %>&nbsp;
    <%= builder.text_field :name, :size =>20, :value=>"_dummy2_" %>
  <% end %>
</div>
<div class="field"> 
  <%= f.label :tagline, "Tagline" %><br />
  <%= f.text_field :tagline, :size =>81 %>
</div>
<div class="field"> 
  <%= f.label :tagline, "Review" %><br />
  <%= f.text_area :review, :size => "60x5" %>
</div>
<div class="field">
  <%= f.link_to_add "Add Picture", :pictures %>
</div>
<%= f.fields_for :pictures do |builder2| %>
  <%= render 'picture_fields', :ff => builder2 %>
<% end %>
<div class="field"> 
  <%= f.link_to_remove "Remove this dish" %>
</div>


