<% content_for :sidebar do %>
  <%= render 'shared/main_sidebar' %>
<% end %>

<h1><%= I18n.t(@title) %></h1>

<%= form_for(@visit) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <%= render 'fields', :f => f %>
  <div class="actions">
    <%= f.submit I18n.t(@button) %>
  </div>  
<% end %>

<%= button_to_function "Greeting", "alert('Hello world!')", :class => "ok" %>

  <div id="pics_form">
    <% if @visit.pictures? %>
      <% @visit.pictures.each do |pic| %>
        <%= render 'pic_form' %>
      <% end %>
    <% end %>
  </div>

