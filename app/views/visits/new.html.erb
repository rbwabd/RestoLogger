<% content_for :sidebar do %>
  <%= render 'visits/cart_sidebar' %>
<% end %>

<h1><%= I18n.t(@title) %><%= link_to @store.name, store_path(:id => @store.id)%></h1>

<%= form_for @visit, :html => {:multipart => true} do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <table>
    <tr class="padded-row">
      <td> <%= f.label :visit_date, "Visit Date" %> </td>
      <td> <%= f.text_field :visit_date, :size => 10, :value => Date.today.to_s %> </td>
    </tr>
    <tr class="padded-row">
      <td> <%= label_tag 'dish_search_label', "Dish Name" %> </td>
      <td> <%= text_field_tag 'dish_search_name', '', :size =>60 %>
           <%= hidden_field :dish, :id %> </td>
    </tr>
  </table>
  <div class="action">
    <%= f.submit I18n.t(@button)%> 
    <%= link_to_function "Back", "history.back()"%>
  </div>
  <%= render 'menu_tabs', :f => f %>  
<% end %>
