<% content_for :sidebar do %>
  <%= render 'layouts/main_sidebar' %>
<% end %>

<h1><%= t("visits.confirm_title") %></h1><br>

<%= form_for(@visit, :url => visit_path( :id => Hid.enc(@visit.id), :confirmed => true )) do |f| %>
  <% for item in @need_confirmation_list %>
    <% if item[:type] == :new %>
      <div>
        New dish to be added to menu: <%= item[:name] %>
      </div>
    <% elsif item[:type] == :del %>  
      <div>
        Already saved dish to be deleted from order: <%= item[:name] %>  
      </div>
    <% end %> 
  <% end %>
  <div class="action">
    <%= f.submit t("confirm_button")%> 
    <%= link_to_function t("cancel_button"), "history.back()"%>  
  </div>
<% end %>