  <div id="sidebar">
    <ul>
      <li>
        <% if user_signed_in? %>
          <h3>
            <% if !current_user.profile_picture %>
              <%= gravatar_image_tag(current_user.email, :gravatar => { :size => 35 }, :alt => "", :class => "round vertical_align")%>
            <% else %>
              <%= image_tag(current_user.profile_picture.image_url, :size => "60x60", :alt => "", :class => "round vertical_align")%>
            <% end %>
            &nbsp;<%= current_user.name %>
          </h3>
          <p>
          <ul>
            <li class="<% if current_page?(visited_store_list_reports_path) %>sb-hl<%end%>"><%= link_to "My Visits", visited_store_list_reports_path %></li>
            <li class="<% if params[:controller] == 'store_lists' %>sb-hl<%end%>"><%= link_to "Restaurant Lists", store_lists_path %></li>
            <li class="<% if false %>sb-hl<%end%>"><%= link_to "My Favourite Dishes", "#" %></li>
            <li class="<% if false %>sb-hl<%end%>"><%= link_to "My Dish Reviews", "#" %></li>
            <li class="<% if current_page?(show_my_following_users_path)  %>sb-hl<%end%>"><%= link_to "My Friends", show_my_following_users_path %></li>
            <li class="<% if false %>sb-hl<%end%>"><%= link_to "tester", show_friend_visit_reports_path %></li>
            <li class="<% if false %>sb-hl<%end%>"><%= link_to "tester", show_friend_visits_path %></li>
            <li class="<% if false %>sb-hl<%end%>"><%= link_to "My Statistics", "#" %></li>
            <br/>
            <li class="<% if current_page?(search_stores_path) %>sb-hl<%end%>"><%= link_to "Find a Store", search_stores_path %></li>
            <li class="<% if current_page?(stores_path) %>sb-hl<%end%>"><%= link_to "List all Stores", stores_path %></li>
          </ul>
        <% end %>
      </li>
      <li>
        <% if user_signed_in? %>
          <h2>
            Messages
          </h2>
          <ul>
            <li><a href="#">Albert started following you</a></li>
            <li><a href="#">Frank posted a great review</a></li>
            <li><a href="#">John edited information you posted</a></li>
          </ul>
        <% end %>
      </li>
    </ul>
  </div>









