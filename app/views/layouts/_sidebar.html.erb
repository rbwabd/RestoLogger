  <div id="sidebar">
    <ul>
      <li>
        <% if user_signed_in? %>
          <h2>
            <% if current_user.profilepicurl.nil? %>
              <%= gravatar_image_tag(current_user.email, :gravatar => { :size => 35 }, :alt => "", :class => "round vertical_align")%>
            <% else %>
              <%= image_tag(current_user.profilepicurl, :size => "60x60", :alt => "", :class => "round vertical_align")%> 
            <% end %>
            &nbsp;<%= current_user.name %>
          </h2>
          <ul>
            <li><%= link_to "Home", root_path %></li>
              <li><%= link_to "Post Visit", current_user %></li>
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Users", users_path %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li><%= link_to "Sign out", destroy_user_session_path, :method=> 'delete' %></li>
          </ul>
        <% end %>
      </li>
    </ul>
  </div>

  
