<% content_for :sidebar do %>
  <%= render 'layouts/main_sidebar' %>
<% end %>

<h1><%= I18n.t(@title) %></h1>

<%= form_for(@store_list) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label :name, "Name:" %>&nbsp;
    <%= f.text_field :name, :size => 80 %>
    <% if @add_store_id %>
      <%= hidden_field_tag :add_store_id, @add_store_id %>
    <% end %>
  </div>
  <div class="action">
    <%= f.submit I18n.t(@button) %> 
  </div>
<% end %>
