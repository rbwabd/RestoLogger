<% content_for :sidebar do %>
  <%= render 'layouts/main_sidebar' %>
<% end %>

<h1><%= I18n.t(@title) %><%= @store.name %></h1><br>

<div id="store">
  <strong>Name:</strong> <%= @store.name %>
  </br>
  <strong>City:</strong> <%= @store.city.name %>
  </br>
  <strong>Address:</strong> <%= @store.address %>
  <br>
  <div id="select-as-button">
    <%= select_tag "store_list_select", options_from_collection_for_select(@store_lists, "id", "name"), :prompt => "Add to list:", :size => 1 %>
  </div>
  <div class="">
    <strong>Categories:</strong>
    <% for rel in @store.store_type_relationships %>
      &nbsp;<%= rel.store_type.name %>
    <% end %>
  </div>
  <br>
  <div class="action">
    <%= link_to I18n.t(@button), new_visit_path(:id => Hid.enc(@store.id))%>
    <%= link_to I18n.t(@button2), menu_path(@store.menu)%>
  </div>    
</div>
