<% content_for :sidebar do %>
  <%= render 'shared/main_sidebar' %>
<% end %>

<div id="store">
  </br>
  <strong>Store Name:</strong> <%= @store.name %>
  </br>
  <strong>City:</strong> <%= @store.city.name %>
  <div class="">
    Categories: 
    <% for rel in @store.store_type_relationships %>
      &nbsp;<%= rel.store_type.name %>
    <% end %>
  </div>
  <br>
  <div class="actions">
    <%= link_to I18n.t(@button), new_visit_path(:id => @store.id)%>
  </div>    
</div>
