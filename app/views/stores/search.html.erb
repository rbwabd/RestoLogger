<% content_for :sidebar do %>
  <%= render 'shared/main_sidebar' %>
<% end %>

<h1><%= I18n.t(@title) %></h1>

<%= form_for(@store, :url => search_store_results_path) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <span>
    <%= label :city, :name, "City:" %>&nbsp;
    <%= text_field 'city', 'name' %>
    <%= hidden_field 'city', 'id' %>
  </span>  
  <span>
    <%= label :state, :name, "State:" %>&nbsp;
    <%= select :state, :id, State.find_all_by_country_id(@country.id).collect {|p| [ p.name, p.id ] } %>
  </span>
  <span>
    <%= label :country, :name, "Country:" %>&nbsp;
    <%= select :country, :id, Country.all.collect {|p| [ p.name, p.id ] } %>
  </span>
  <br/>
  <br/>
  <div class="field">
    <%= f.label :name, "Restaurant Name:" %>&nbsp;
    <%= f.text_field :name, :size =>50 %>
    <%= f.hidden_field :id %>&nbsp;
    <%= f.submit I18n.t(@button) %>
    <span class="actions">  
    </span>  
  </div>
  <div id="display">
  </div>
  <% for result in @res %>
    <%= result[:name] %><br>
    <%= result[:address] %><br>
    <%= result[:country] %><br>
    <%= result[:phone] %><br>
    <%= result[:store_id] %>
    <%= link_to I18n.t(@button2), new_store_path(:name => result[:name], :address => result[:address], :param => params)%>
    <br><br>
    <% end %>
<% end %>
