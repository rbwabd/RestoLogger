<% content_for :sidebar do %>
  <%= render 'layouts/main_sidebar' %>
<% end %>

<h1><%= I18n.t(@title, :store_name => @store.name) %></h1><br>

<%= form_for(@store) do |f| %>
  <div class="action">
    <%= f.submit I18n.t(@button) %>
  </div><br>
  <% c=0 %>
  <div id="tabssortable">
    <ul>
      <% for k in @dishes.keys %>
        <li><a href="#tabs<%= c+=1%>"><%= k %></a></li>
      <% end %>
    </ul>
    <% c=0 %>
    <% for k in @dishes.keys %>
      <div id="tabs<%=c+=1%>">
        <table>
          <tr>
            <th>Category</th>
            <th>Dish Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Order Code</th>
          </tr>
          <% for dish in @dishes[k] %>
            <tr>
              <td style="vertical-align:top"><%= dish.dish_type.name %></td>
              <td style="vertical-align:top"><%= link_to dish.name, dish_path(dish)%>&nbsp;<%= dish.option_description %></td>
              <td style="vertical-align:top; text-align:right"><%= dish.price_comment %>&nbsp;<%= dish.price %></td>
              <td style="vertical-align:top"><%= dish.description %></td>
              <td style="vertical-align:top"><%= dish.code %></td>
            </tr>
          <% end %>
        </table>
      </div>
    <% end %>
  </div>
  <br><div class="action">
    <%= f.submit I18n.t(@button) %>
  </div>
<% end %>