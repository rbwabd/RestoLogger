<% content_for :sidebar do %>
  <%= render 'layouts/main_sidebar' %>
<% end %>

<h1><%= I18n.t(@title, :store_name => @store.name) %></h1><br>

<style>
	#sortable1 li, #sortable2 li, #sortable3 li, #sortable4 li, #sortable5 li, #sortable6 li { margin: 0 5px 5px 5px; padding: 5px; font-size: 1.2em; }
</style>

<%= form_for(@store) do |f| %>
  <div class="action">
    <%= f.submit I18n.t(@button) %>
  </div><br>
  <% c=0 %>
  <div id="tabssortable">
    <ul>
      <% for k in @dishes.keys %>
        <li><a href="#tabs<%= c+=1%>"><%= k %></a></li>
      <% end %>
    </ul>
    <% c=0 %>
    <% for k in @dishes.keys %>
      <div id="tabs<%=c+1%>">
        <ul id="sortable<%=c+=1%>" class="connectedSortable ui-helper-reset">
          <% for dish in @dishes[k] %>
            <li class="ui-state-default"><%= dish.name %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
  <br><div class="action">
    <%= f.submit I18n.t(@button) %>
  </div>
<% end %>