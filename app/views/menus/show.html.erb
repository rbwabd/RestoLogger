<% content_for :sidebar do %>
  <%= render 'layouts/main_sidebar' %>
<% end %>

<h1><%= t("menus.show_menu_title") %><%= link_to @store.name, store_path(@store)%></h1><br>

<% c=0 %>
<div id="tabs">
  <ul>
    <% for k in @dishes.keys %>
      <li><a href="#tabs<%= c+=1%>"><%= k %></a></li>
    <% end %>
  </ul>
  <% c=0 %>
  <% for k in @dishes.keys %>
    <div id="tabs<%=c+=1%>">
      <table>
        <tr>
          <th>Dish Name</th>
          <th>Price</th>
          <th>Description</th>
          <th>Order Code</th>
        </tr>
        <% for dish in @dishes[k] %>
          <tr>
            <td style="vertical-align:top"><%= link_to dish.name, dish_path(dish)%>&nbsp;<%= dish.option_description %></td>
            <td style="vertical-align:top; text-align:right"><%= dish.price_comment %>&nbsp;<%= dish.price %></td>
            <td style="vertical-align:top"><%= dish.description %></td>
            <td style="vertical-align:top"><%= dish.code %></td>
          </tr>
        <% end %>
      </table>
    </div>
  <% end %>
</div>
<div class="action">
  <%= link_to t("menus.new_dish_button"), add_menu_path(@menu)%>
  <%= link_to t("menus.edit_menu_button"), edit_order_menu_path(@menu)%>
  <%= link_to t("menus.return_to_store_button"), store_path(@store)%>
</div>